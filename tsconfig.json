{
    "compilerOptions": {
        "allowJs": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "module": "ESNext",
        "moduleResolution": "node",
        "outDir": "bogus",
        "target": "ESNext"
    },
    "include": [
        "eslint.config.js",
        "config/.eslintrc/index.js",
        "bin/*.js",
        "config/*.js",
        "scripts/*.js",
        "test/*.js",
        "template/src/**/*.ts",
        "template/src/**/*.tsx"
    ]
}
