{
    // This project does not contain any TS files, so the outDir is irrelevant.
    // This config is only used for checking .js files.
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "jsx": "react",
        "module": "ESNext",
        "moduleResolution": "node",
        "outDir": "bogus",
        "target": "ESNext"
    },
    "include": [
        ".eslintrc.cjs",
        "bin",
        "config",
        "lib",
        "scripts",
        "test",
        "template/src/*.ts",
        "template/src/**/**/*.ts",
        "template/src/**/**/*.tsx"
    ]
}
