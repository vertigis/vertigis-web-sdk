{
    "compilerOptions": {
        "allowJs": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "ESNext"
    },
    "include": [
        "**/.eslintrc.js",
        "bin",
        "config",
        "lib",
        "scripts",
        "test",
        "template/src/*.ts",
        "template/src/**/**/*.ts",
        "template/src/**/**/*.tsx"
    ]
}
